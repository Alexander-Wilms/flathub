{
	"app-id":"org.secretchronicles.TheSecretChronicles",
	"runtime":"org.freedesktop.Platform",
	"runtime-version":"1.6",
	"sdk":"org.freedesktop.Sdk",
	"command":"tsc",
	"rename-icon": "tsc_icon_128",
	"finish-args":[
		"--device=dri",
		"--socket=pulseaudio",
		"--socket=wayland",
		"--socket=x11"
	],
	"cleanup":[
		"/include",
		"/lib/cmake",
		"/lib/pkgconfig",
		"/share/doc",
		"/share/man",
		"*.a",
		"*.la",
		"*.cmake"
	],
	"modules":[
		{
			"name":"xerces",
			"buildsystem": "cmake-ninja",
			"sources":[
				{
					"type":"archive",
					"url":"http://www.apache.org/dist/xerces/c/3/sources/xerces-c-3.2.1.tar.xz",
					"sha256":"02deac7c863027381910a8371f634f8bd14b39232a387efedd27c18f24f989cb"
				}
			]
		},
		"shared-modules/udev/udev-175.json",
		{
			"name":"SFML",
			"buildsystem":"cmake-ninja",
			"config-opts":[
				"-DSFML_INSTALL_PKGCONFIG_FILES=TRUE"
			],
			"sources":[
				{
					"type":"archive",
					"url":"http://www.sfml-dev.org/files/SFML-2.4.2-sources.zip",
					"sha256":"8ba04f6fde6a7b42527d69742c49da2ac529354f71f553409f9f821d618de4b6"
				}
			]
		},
		{
			"name":"secretchronicles",
			"buildsystem":"cmake-ninja",
			"builddir": true,
			"config-opts": ["-DCMAKE_BUILD_TYPE=Debug"],
			"sources":[
				{
					"type":"git",
					"url":"https://github.com/Secretchronicles/TSC3"
				},
				{
					"type": "file",
					"path": "org.secretchronicles.TheSecretChronicles.appdata.xml"
				},
				{
					"type": "file",
					"path": "org.secretchronicles.TheSecretChronicles.desktop"
				},
				{
					"type": "file",
					"path": "tsc_icon_128.png"
				}
			],
			"build-commands":[
				"mkdir --parents /app/share/appdata",
				"cp ../org.secretchronicles.TheSecretChronicles.appdata.xml /app/share/appdata/",
				"mkdir --parents /app/share/applications",
				"cp ../org.secretchronicles.TheSecretChronicles.desktop /app/share/applications/",
				"mkdir --parents /app/share/icons/hicolor/128x128/apps/",
				"cp ../tsc_icon_128.png /app/share/icons/hicolor/128x128/apps/"
			]
		}
	]
}
